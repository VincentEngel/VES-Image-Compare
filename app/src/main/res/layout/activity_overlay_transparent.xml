<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:keepScreenOn="true"
    tools:context=".OverlayTransparentActivity">

    <FrameLayout
        android:id="@+id/frameLaout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tableRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.vincentengelsoftware.androidimagecompare.viewClasses.ZoomImageView
            android:id="@+id/overlay_transparent_image_view_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/first_image"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <com.vincentengelsoftware.androidimagecompare.viewClasses.ZoomImageView
            android:id="@+id/overlay_transparent_image_view_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:alpha="0.50"
            android:background="@android:color/transparent"
            android:contentDescription="@string/second_image"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

    </FrameLayout>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLaout">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ToggleButton
                android:id="@+id/overlay_transparent_button_zoom_sync"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_link"
                android:backgroundTint="@color/button"
                android:text="@string/sync"
                android:textOff=""
                android:textOn="" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <SeekBar
                android:id="@+id/overlay_slide_seek_bar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/overlay_transparent_button_hide_front_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/button"
                android:contentDescription="@string/hide_front_image"
                app:srcCompat="@drawable/ic_visibility"
                tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck"
                tools:srcCompat="@drawable/ic_visibility" />
        </FrameLayout>

    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>
