<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VesAndroidImageCompare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>

        <item name="android:textStyle">bold</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">@bool/navigation_bar_light</item>
        <item name="android:windowLightStatusBar">@bool/navigation_bar_light</item>

        <item name="android:buttonStyle">@style/buttonStyles</item>
        <item name="android:imageButtonStyle">@style/imageButtonStyles</item>
        <item name="buttonStyle">@style/buttonStyles</item>
        <item name="imageButtonStyle">@style/imageButtonStyles</item>
    </style>
    
    <style name="imageButtonStyles" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:textColor">@color/text_button</item>
    </style>
    <style name="buttonStyles" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:textColor">@color/text_button</item>
    </style>
    <style name="alertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorSecondary">@color/text_color</item>
        <item name="android:titleTextColor">@color/text_color</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/text_color</item>
    </style>
</resources>